<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <h1>Edit flat</h1>
      <%= simple_form_for(@flat) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.submit class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
