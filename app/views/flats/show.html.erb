<%# banner -------------------------------------------- %>

<div class="banner">
</div>

<%# body ------------------------------------------------ %>

<div class="container margin-top-negative">
  <div class="row">

    <div class="col-8">
      <%# title and address ------------------------------- %>
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.address %></p>
      </div>
      <%# description and map -------------------------------- %>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
        <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=10 Clifton Gardens London W9 1DT&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C10 Clifton Gardens London W9 1DT&key=AIzaSyAPpx0wk4d-AQ8bhe8-a-ihC7NXLoPElhg')">
        </div>
      </div>
    </div>

    <div class="col-4">

      <%# booking form --------------------------------------- %>
      <div class="flat-show-card">
        <h5>Book this place!</h5>
        <form action>
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/24" aria-label="start-date" aria-describedby="start-date-label">
          </div>

          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/24" aria-label="end-date" aria-describedby="start-date-label">
          </div>

          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>


      <%# details -------------------------------------------- %>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex"> <%= @flat.number_of_guests %> people</div>
          <div class="flex ms-3">euro <%= @flat.price_per_night %></div>
        </div>
      </div>

      <%# share box ------------------------------------------------ %>
      <div class="flat-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
